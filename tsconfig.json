{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": [
            "ES2022",
        ],
        "resolveJsonModule": true,
        "sourceMap": true,
        "outDir": "dist",
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true
    },
    "include": [
        "config/*",
        "src/**/*",
    ],
    "exclude": [
        "setup.ts",
        "node_modules",
        "test",
        "src/commands/ignore/*"
    ]
}