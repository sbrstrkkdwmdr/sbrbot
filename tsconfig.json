{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": [
            "ES2021"
        ],
        "resolveJsonModule": true,
        "sourceMap": true,
        "outDir": "dist",
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true
    },
    "include": [
        "commands/**/*",
        "config/**/*",
        "src/**/*",
        "tests/",
        "*",
    ],
    "exclude": [
        "setup.ts",
        "node_modules",
        "test"
    ]
}